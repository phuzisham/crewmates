<body class="mainBack">
  <div class=" card col-md-4">
    <h3>Edit Account Info: <%= current_user.username %></h3>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username, class: 'control-label'  %>
      <%= f.text_field :username, class: 'form-control formBack'  %>
    </div>

    <div class="form-group">
      <%= f.label :name, class: 'control-label'  %>
      <%= f.text_field :name, class: 'form-control formBack'  %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'control-label'  %>
      <%= f.email_field :email, class: 'form-control formBack'  %>
    </div>

    <div class="form-group">
      <%= f.label :home_country, class: 'control-label'  %>
      <%= f.text_field :home, class: 'form-control formBack'  %>
    </div>

    <div class="form-group">
      <%= f.label :age, class: 'control-label'  %>
      <%= f.number_field :age, class: 'form-control formBack'  %>
    </div>

    <div class="form-group">
      <%= f.label :years_of_experience, class: 'control-label'  %>
      <%= f.number_field :experience, class: 'form-control formBack'  %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, class: 'control-label'  %>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label'  %>
      <i>(leave blank if not changing)</i>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control formBack' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control formBack' %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: 'control-label' %>
      <i>(required)</i>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control formBack' %>
    </div>

    <div class="form-group">
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-info" %>
      </div>
    </div>

    <% end %>
    <hr>
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

    <%= link_to "Back", :back %>
  </div>
</body>
