<div class="row">
  <% if @crew.any? %>
  <div class="col-md-6">
    <div class="card">
      <h4>Available Crew:</h4>
      <hr>
      <% @crew.each do |u| %>
        <div class="row">
          <div class="col-md-3">
            <li class='round-image-50'><%= image_tag(u.avatar.url(:thumb)) %></li>
            <li><%= link_to u.username, :controller => "home", :action => "user", :id => u.id %></li>
          </div>
          <div class="col-md-9">
            <li><%= u.detail %></li>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
  <% end %>

  <% if @captains.any? %>
    <div class="col-md-6">
      <div class="card">
        <h4>Available Positions:</h4>
        <hr>
        <% @captains.each do |u| %>
          <div class="row">
            <div class="col-md-3">
              <li class='round-image-50'><%= image_tag(u.avatar.url(:thumb)) %></li>
              <li><%= link_to u.username, :controller => "home", :action => "user", :id => u.id %></li>
            </div>
            <div class="col-md-9">
              <li><%= u.detail %></li>
            </div>
          </div>
          <br>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
