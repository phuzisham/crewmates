<% if @messages.any? %>
  <div id="forumMess">
    <div class="card" id="forumMessCard">
      <h4><li><%= @forum.title %></li></h4>
      <small>Forum Author: <%= @user.username %></small>
      <hr>
      <% @messages.each do |m| %>
        <div class="row">
          <div class="col-md-9">
            <% user = User.find(m.user_id)%>
            <li><%= m.title %></li>
            <li><%= m.body %></li>
            <li>Author: <%= user.username %></li>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
<% end %>

<div id="messWriteDiv">
  <div id="textWriteCard" class="card">
    <%= form_for [@forum, @message], remote: true do |f| %>
      <%= f.label :title %>
      <br>
      <%= f.text_area :title, :rows => 1, style: 'width:30%;', class: 'formBack' %>
      <br>
      <%= f.label :body %>
      <br>
      <%= f.text_area :body, :rows => 10, style: 'width:100%;', class: 'formBack' %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div>
        <%= f.submit class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>
